generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/* ---------- ENUMS ---------- */

enum OAuthProvider {
  GOOGLE
  GITHUB
  MICROSOFT
}

enum EmailEventType {
  SENT
  DELIVERED
  OPENED
  CLICKED
  BOUNCED
  COMPLAINED
  FAILED
}

enum OutboundEmailStatus {
  PENDING
  SENT
  FAILED
  BOUNCED
  COMPLAINED
  DELIVERED
}

enum OutboundEmailAttemptStatus {
  PENDING
  SUCCESS
  FAILED
}

enum OutboundEmailFailureReason {
  PROVIDER_ERROR
  RATE_LIMITED
  NETWORK_ERROR
  USER_CANCELLED
  UNKNOWN
}

enum InboundEmailStatus {
  WAITING
  RECEIVED
}

enum InboundEvaluationStatus {
  PENDING
  SUCCESS
  FAILED
}

enum RequestOverviewStatus {
  DRAFT
  CREATED

  PROCESSING
  OUTBOUND_FAILED
  EMAILS_SENT

  AWAITING_RESPONSES
  RESPONSES_RECEIVED

  EVALUATING
  EVALUATION_FAILED

  COMPLETED
  CLOSED
}

/* ---------- MODELS ---------- */

// User Schema, to store all users together in one table
model User {
  id                 String    @id @default(uuid())
  createdAt          DateTime @default(now())
  name               String?
  email              String?   @unique
  password           String? 

  oauthUserProfile   OAuthUserProfile[]
  refershTokenVault  RefreshTokenVault[]
  respondentGroups   RespondentGroup[]
  requests           Request[]
  requestOverviews   RequestOverview[]
}

//OAuthUserProfile Schema, to store all OAuth profiles together in one table
model OAuthUserProfile {
  id                 String @id @default(uuid())
  createdAt          DateTime @default(now())
  provider           OAuthProvider
  providerUserId     String

  userId             String
  user               User @relation(fields: [userId], references: [id])

  @@unique([provider, providerUserId])
}

model RefreshTokenVault {
  id                 String @id @default(uuid())
  createdAt          DateTime @default(now())
  expiresAt          DateTime 
  isRevoked          Boolean @default(false)
  tokenHash          String  @unique
   
  userId             String
  user               User @relation(fields: [userId], references: [id])
}

// Respondent group Schema, to store all groups' enitity together in one table
model RespondentGroup {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  respondents Respondent[]
  requests    Request[]

  @@unique([userId, name])
}

// Respondent Schema, to store all respondents together in one table
model Respondent {
  id                       String   @id @default(uuid())
  name                     String
  email                    String
  createdAt                DateTime @default(now())

  outboundStatus           OutboundEmailStatus @default(PENDING)
  inboundStatus            InboundEmailStatus @default(WAITING)
  inboundEvaluationStatus  InboundEvaluationStatus @default(PENDING)

  groupId                  String
  group                    RespondentGroup @relation(fields: [groupId], references: [id])

  @@unique([email, groupId])
}

// Request Schema, to store all requests together in one table
model Request {
  id                   String   @id @default(uuid())
  createdAt            DateTime @default(now())

  title                String
  description          String
  userId               String
  respondentGroupId    String
  aiRequestProfileId   String?

  user                 User  @relation(fields: [userId], references: [id])
  respondentGroup      RespondentGroup @relation(fields: [respondentGroupId], references: [id])

  inboundMessages      InboundMessage[]
  aiRequestProfile     AIRequestProfile[]
  requestOverview      RequestOverview[]
}

// Inbound message schema, to store all messages together in one table
model InboundMessage {
  id                         String    @id @default(uuid())
     
  from                       String
  messageId                  String    @unique
  createdAt                  DateTime  @default(now())
     
  requestId                  String
  request                    Request @relation(fields: [requestId], references: [id])

  aiResponseEvaluationId     String?

  inboundMessageContents     InboundMessageContent[]  
  inboundMessageAttachments  InboundMessageAttachment[]
  aiResponseEvaluation       AIResponseEvaluation[]

  @@index([requestId, from])

  // Business rule constraint: A respondent may submit exactly one proposal per request.
  @@unique([requestId, from])
}

// Inbound Message Content schema, to store all info in a messsage together in one table
model InboundMessageContent {
  id                   String    @id @default(uuid())
  subject              String?
  text                 String?
  html                 String?
  createdAt            DateTime  @default(now())
        
  inboundMessageId     String
  inboundMessage       InboundMessage @relation(fields: [inboundMessageId], references: [id])
}

// Inbound Message Attachment schema, to store all attachments together in one table
model InboundMessageAttachment {
  id                   String    @id @default(uuid())
  fileName             String
  contentType          String
  size                 Int
  url                  String
  createdAt            DateTime  @default(now())

  inboundMessageId     String
  inboundMessage       InboundMessage @relation(fields: [inboundMessageId], references: [id])
}

// OutboundEmailAttempt Schema, to store all outbound mail attempts together in one table
model OutboundEmailAttempt {
  id                   String    @id @default(uuid())

  fromEmail            String
  toEmail              String
  subject              String?

  requestId            String
  respondentGroupId    String
  userId               String

  status               OutboundEmailAttemptStatus @default(PENDING)
  failureReason        OutboundEmailFailureReason?

  createdAt            DateTime  @default(now())

  outboundEmailId      String?
  outboundEmail        OutboundEmail?  @relation(fields: [outboundEmailId], references: [id])

  @@index([userId])
  @@index([requestId])
  @@index([respondentGroupId])
}

// OutboundEmail Schema, to store all outbound mails together in one table
model OutboundEmail {
  id                   String    @id @default(uuid())

  // To manage retries and idempotency
  resendMessageId      String    @unique 

  fromEmail            String
  toEmail              String
  subject              String?
  status               OutboundEmailStatus
  current_status       OutboundEmailStatus

  requestId            String
  respondentGroupId    String
  userId               String

  createdAt            DateTime  @default(now())

  events               OutboundEmailEvent[]
  attempts             OutboundEmailAttempt[]

  @@index([userId])
  @@index([requestId])
  @@index([respondentGroupId])
}

// OutboundEmailEvent Schema, to store all outbound email events together in one table
model OutboundEmailEvent {
  id                   String  @id @default(uuid())
  eventType            OutboundEmailStatus
  occurredAt            DateTime
  createdAt            DateTime  @default(now())
  payload              String?

  outboundEmailId      String
  outboundEmail        OutboundEmail @relation(fields: [outboundEmailId], references: [id])

  @@unique([outboundEmailId, eventType])
}

model AIRequestProfile {
  id                String    @id @default(uuid())
  createdAt         DateTime  @default(now())

  aiModel           String
  promptVersion     Int
  aiSummary         String
  scoringCriteria  Json @default("[]")

  requestId         String   @unique
  request           Request  @relation(fields: [requestId], references: [id])
}

model AIResponseEvaluation {
  id                     String   @id @default(uuid())
  createdAt              DateTime @default(now())
     
  aiModel                String
  promptVersion          Int
  aiSummary              String
  overallScore           Float
  scoreBreakdown         Json @default("[]")
  confidence             Float
  scoringExplanation     String

  inboundMessageId  String  @unique
  inboundMessage    InboundMessage @relation(fields: [inboundMessageId], references: [id])
}

model PromptProfile {
  id                     String   @id @default(uuid())
  createdAt              DateTime @default(now())

  key                     String
  version                 Int
  purpose                 String
  systemPrompt            String
  userPromptTemplate      String
  outputSchema            Json 
  temperature             Float
  topP                    Float @default(0.9)

  @@unique([key, version])
}

model RequestOverview {
  id                           String  @id @default(uuid())
  createdAt                    DateTime  @default(now())
     
  requestId                    String  @unique
  title                        String
  description                  String
  respondentGroupId            String
  aiRequestProfileId           String?

  outboundMailSentCount        Int @default(0)
  outboundMailFailedCount      Int @default(0)
  outboundMailBouncedCount     Int @default(0)
  outboundMailComplainedCount  Int @default(0)
  outboundMailDeliveredCount   Int @default(0)
  lastOutboundMailTimeStamp    DateTime?

  inboundMailCount             Int @default(0)
  lastInboundMailTimeStamp     DateTime?

  status                       RequestOverviewStatus
  lastUpdatedAt                DateTime  @default(now()) 

  request                      Request  @relation(fields: [requestId], references: [id])

  userId                       String
  user                         User  @relation(fields: [userId], references: [id])

}


