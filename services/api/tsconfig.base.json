// Monorepo-style layered TS configuration

{
  "compilerOptions": {
    "target": "ES2020",                      // Good for Node 18â€“22
    "module": "CommonJS",                    // Most stable for Express

    "strict": true,

    "esModuleInterop": true,                 // Allows default imports (common in Express)
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "moduleResolution": "node",

    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    "types": ["node"],                       // Important for backend typings
    "sourceMap": true                        // Helps debugging
  }
}
